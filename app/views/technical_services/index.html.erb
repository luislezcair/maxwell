<div class="card">
  <div class="card-header">
    <%= t('.header') %>
  </div>

  <div class="card-body">
    <table class="table table-responsive-sm table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Ciudad</th>
          <th>Nº de orden de trabajo</th>
          <th>Nº de serie de antena</th>
          <th>Tipo de trabajo</th>
        </tr>
      </thead>

      <tbody>
        <% @technical_services.each_with_index do |ts, i| %>
          <tr>
            <td><%= i + 1 %></td>
            <td>Oberá</td>
            <td><%= ts.work_order_number %></td>
            <td><%= ts.antenna_serial_number %></td>
            <td>Instalación nuevo cliente</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="float-right">
      <%= link_to new_technical_service_path, class: 'btn btn-primary' do %>
        <i class="fa fa-plus"></i> Nuevo servicio
      <% end %>
    </div>
  </div>
</div>
