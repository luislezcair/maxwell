<%= content_for :header_tabs do %>
  <nav class="nav nav-pills flex-column flex-sm-row">
    <%= link_to t('common.nav.users'), system_users_path, class: 'flex-sm-fill text-sm-center nav-link active' %>
    <%= link_to t('common.nav.groups'), system_groups_path, class: 'flex-sm-fill text-sm-center nav-link' %>
  </nav>
<% end %>

<div class="card">
  <div class="card-header data-header">
    <div class="title"><%= t('.header') %></div>

    <div>
      <% if can? :create, User %>
        <%= link_to new_system_user_path, class: 'btn btn-sm btn-primary', data: { toggle: 'tooltip', title: t('.tooltip.new') } do %>
          <i class="fa fa-plus"></i>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <div id="users-table-container">
      <%= render 'users_table' %>
    </div>
  </div>
</div>
